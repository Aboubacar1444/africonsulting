{% extends "base.html.twig" %}
{% block title %}AFRIQUEBAARA - Candidatures{% endblock %}
{% block body %}
    {% if is_granted('ROLE_CANDIDAT') %} 
        <div class="container">
            <div class="row justify-content-center text-center">
                <h1 class=" "> Finalisation de la candidature</h1>
            </div>
            <hr>
            <div class="justify-content-center text-center">
                <form method='post' enctype="multipart/form-data">
                    <div class="row md-form">
                        <div class="file-field col-md-12">
                            <div class="btn btn-primary btn-sm float-left">
                                <span>Lettre de motivation PDF</span>
                                <input type="file" name="lm" required>
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text" placeholder="Joignez votre lettre de motivation">
                            </div>
                        </div>
                    </div>
                    <div class="row md-form">
                        <div class="file-field col-md-12">
                            <div class="btn btn-primary btn-sm float-left">
                                <span>Autre document PDF</span>
                                <input type="file" name="other">
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text" placeholder="Joignez un autre document ex: diplÃ´me (pas obligatoire)">
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-rounded md-form">Candidater</button>
                </form>
            </div>
        </div>
    {% else %}
        <script>
            window.location.href='{{path("signin")}}';
        </script>
    {% endif %}
{% endblock %}
        