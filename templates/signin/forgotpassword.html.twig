{% extends "base.html.twig" %}
{% block title %}AFRIQUEBAARA{% endblock %}
{% block body %}
    {% if  passuser %}  
       
        <main>
            <div class="card">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Changement de votre mot de passe</h4>
                </div>
                <form method="post">
                    <div class="modal-body mx-3">
                        <div class="md-form mb-5">
                            <input type="password" name="newpass" id="newpass" class="form-control validate">
                            <label data-error="wrong" data-success="right" for="newpass">Nouveau mot de passe</label>
                        </div>
                        <div class="md-form mb-5">
                            <input type="password" id="checknewpass" class="form-control validate">
                            <label data-error="wrong" data-success="right" for="checknewpass">Répéter le nouveau mot de passe </label>
                            <span class="mt-1" id="message"></span>
                        </div>
                        
                    </div>
                    <div class="md-form d-flex justify-content-center">
                        <button class="btn btn-outline-warning btn-sm" role="submit" type="submit" id="update" style="display:none">Modifier</button>
                    </div>
                </form>
            </div>
        
            
        </main>
    {% endif %}
{% endblock %}
{% block ScriptP %}
    <script>
       $(document).ready(function(){ 
         $('#checknewpass').on('keyup', function () {
            if ($('#newpass').val() == $('#checknewpass').val()) {
                $('#message').html('Les mots de passe correspondent').css('color', 'green');
                $('#update').css('display','');
            } else{
                $('#message').html('Les mots de passe ne correspondent pas').css('color', 'red');
                $('#update').css('display','none');
            }
            });
       });
    </script>
{% endblock %}

